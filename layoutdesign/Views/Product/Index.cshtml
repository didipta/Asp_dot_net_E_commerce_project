@model List<dynamic>

<h2>Product List</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.title</td> <!-- Adjust property names based on the actual API response structure -->
                    <td>@item.body</td>
                    <td>@item.userId</td>
                    <td>
                        <img src="@item.image_url" alt="@item.name" width="100" height="100" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}
